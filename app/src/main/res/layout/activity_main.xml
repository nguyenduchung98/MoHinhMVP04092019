<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textviewTieude"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập hệ thống"
        android:textSize="40sp"
        android:textColor="#f20"
        />
    <EditText
        android:hint="Nhập User name"
        android:id="@+id/edittextUser"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textviewTieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Nhập Pass word"
        android:id="@+id/edittextPass"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/edittextUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edittextPass"
        android:id="@+id/buttonDangnhap"
        android:text="Đăng Nhập"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>